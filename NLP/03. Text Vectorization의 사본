\n","def tf_idf(term, documents, n):\n","  # n 번째 문서 가져오기\n","  document = documents[n]\n","\n","  return term_frequency(term, document) * inverse_document_frequency(term, documents)"],"metadata":{"id":"0ZY4mKdOxlze"},"execution_count":null,"outputs":[]},{"cell_type":"code","source":["tf_idf(\"yeah\", corpus, 0), tf_idf(\"yeah\", corpus, 1)"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"mO4n7VeX_IJ8","executionInfo":{"status":"ok","timestamp":1670911800559,"user_tz":-540,"elapsed":296,"user":{"displayName":"소민호","userId":"16551848544638359832"}},"outputId":"6c19ab2e-5105-4b18-a51d-d26a0cd87a5b"},"execution_count":null,"outputs":[{"output_type":"execute_result","data":{"text/plain":["(0.0, 63.71951274275037)"]},"metadata":{},"execution_count":87}]},{"cell_type":"markdown","source":["# 20 뉴스그룹 분류"],"metadata":{"id":"sPv1y-unEznl"}},{"cell_type":"code","source":["from sklearn.datasets import fetch_20newsgroups\n","\n","news_data = fetch_20newsgroups(subset='all', random_state=42)"],"metadata":{"id":"wiwGUyqQHIbc"},"execution_count":null,"outputs":[]},{"cell_type":"code","source":["# target 이름 확인\n","news_data.target_names"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"pTp4XBRoHTrE","executionInfo":{"status":"ok","timestamp":1670912025933,"user_tz":-540,"elapsed":317,"user":{"displayName":"소민호","userId":"16551848544638359832"}},"outputId":"1314422b-4038-4681-ae9e-ff49d3ecd7c2"},"execution_count":null,"outputs":[{"output_type":"execute_result","data":{"text/plain":["['alt.atheism',\n"," 'comp.graphics',\n"," 'comp.os.ms-windows.misc',\n"," 'comp.sys.ibm.pc.hardware',\n"," 'comp.sys.mac.hardware',\n"," 'comp.windows.x',\n"," 'misc.forsale',\n"," 'rec.autos',\n"," 'rec.motorcycles',\n"," 'rec.sport.baseball',\n"," 'rec.sport.hockey',\n"," 'sci.crypt',\n"," 'sci.electronics',\n"," 'sci.med',\n"," 'sci.space',\n"," 'soc.religion.christian',\n"," 'talk.politics.guns',\n"," 'talk.politics.mideast',\n"," 'talk.politics.misc',\n"," 'talk.r